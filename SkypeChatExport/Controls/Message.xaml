<UserControl x:Class="SkypeChatExport.Controls.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkypeChatExport.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="320">
    <Border Background="#1C2633" CornerRadius="10">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/> 
            </Grid.RowDefinitions>

            <Grid>
                <TextBlock x:Name="TextName" FontWeight="Bold" Margin="5" Text="Test" Foreground="#F2749A" VerticalAlignment="Center" />
                <TextBlock x:Name="TextDate" FontWeight="Bold" Margin="5" Text="Test2" FontSize="10" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Right" />
            </Grid>
            
            <TextBlock Grid.Row="1" FontSize="14" Margin="5" x:Name="TextMessage" Foreground="White" TextWrapping="Wrap" />
        </Grid>
    </Border>
</UserControl>
